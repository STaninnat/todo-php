{
  "require": {
    "twbs/bootstrap": "^5.3",
    "vlucas/phpdotenv": "^5.6",
    "ramsey/uuid": "^4.9",
    "firebase/php-jwt": "^6.11"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.3",
    "phpstan/phpstan": "^2.1"
  },
  "scripts": {
    "lint": "find src tests -name '*.php' -print0 | xargs -0 php -l",
    "phpstan": "phpstan analyse --configuration=phpstan.neon",
    "check:hard": [
      "@lint",
      "@phpstan"
    ],
    "build": "scripts/env.sh build",
    "up": "scripts/env.sh up",
    "rebuild": "scripts/env.sh rebuild",
    "down": "scripts/env.sh down",
    "down:clean": "scripts/env.sh down:clean",
    "build:test": "scripts/env.sh build test",
    "up:test": "scripts/env.sh up test",
    "rebuild:test": "scripts/env.sh rebuild test",
    "down:test": "scripts/env.sh down test",
    "down:test:clean": "scripts/env.sh down:clean test",
    "test": "scripts/test.sh",
    "test:unit": "scripts/test.sh unit",
    "test:integration": "scripts/test.sh integration",
    "test:integration:fast": "scripts/test.sh integration --fast",
    "clean": "scripts/clean.sh"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  }
}
